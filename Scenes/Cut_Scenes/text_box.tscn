script/source = "extends CanvasLayer

const CHAR_READ_RATE = 0.05

@onready var textbox_container : Node = $\"TextboxContainer\"
@onready var label : Label = $\"TextboxContainer/MarginContainer/HBoxContainer/Label\"
@onready var timer: Timer = $Timer1

enum State {
	READY,
	READING,
	FINISHED
}

var current_state : State = State.READY
var text_queue : Array = []

func _ready():
	print(\"Starting state: State.READY\")
	hide_textbox_container()
	queue_text(\"HAULT WITCH!\")
	queue_text(\"If you want to escape, I need a potion from you.\")
	queue_text(\"Make me the potion I want and I will give you the key.\")
	# queue_text(\"Thanks for watching!\")
	# timer.connect(\"timeout\", self, \"_on_Timer_timeout\")
	timer.start()

func show_textbox_container(duration: float):
	# Show the textbox container
	textbox_container.visible = true
	# Start the timer for the specified duration
	timer.wait_time = duration
	timer.start()


func hide_textbox_container():
	# Hide the textbox container
	textbox_container.visible = false

func _on_Timer_timeout():
	# Code to execute after timer expires
	print(\"Delay completed!\")
	if current_state == State.READY:
		display_text()

func _process(delta: float) -> void:
	match current_state:
		State.READY:
			pass
		State.READING:
			pass
		State.FINISHED:
			pass

func queue_text(next_text: String) -> void:
	text_queue.append(next_text)

func display_text() -> void:
	var next_text : String = text_queue.pop_front()
	label.text = next_text
	change_state(State.READING)
	# show_textbox_container()

func change_state(next_state : State) -> void:
	current_state = next_state
	match current_state:
		State.READY:
			print(\"Changing state to: State.READY\")
		State.READING:
			print(\"Changing state to: State.READING\")
		State.FINISHED:
			print(\"Changing state to: State.FINISHED\")
"

